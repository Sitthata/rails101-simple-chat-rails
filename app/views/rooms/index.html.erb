<p style="color: green"><%= notice %></p>
<% content_for :title, "Rooms" %>
<h1>Rooms</h1>
<div id="rooms">
  <% @rooms.each do |room| %>
    <%= render room %>
    <p>
      <%= link_to "Show this room", room %>
    </p>
    <div class="flex gap-1">
      <%= button_to "Edit", edit_room_path(room) %>
      <%= button_to "Delete", room_path(room), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this room?" }  %>
    </div>
  <% end %>
</div>
<div>
  <h1>Create</h1>
  <%= link_to "New room", new_room_path %>
</div>
